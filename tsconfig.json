{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6", 
        "strict": true,  
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true, 
        "allowJs": true,
        "checkJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": ["src/**/*"], 
    "exclude": ["node_modules", "dist"]
}